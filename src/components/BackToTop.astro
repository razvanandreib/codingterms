<button class="back-to-top hidden">TOP</button>

<style lang="scss">
  @use "../styles/abstracts/index.scss" as *;
  .back-to-top {
    position: fixed;
    right: 2rem;
    bottom: 2rem;
    border-radius: 50%;
    width: 2rem;
    height: 2rem;
    padding: 1rem;
    border: none;
    cursor: pointer;
    background-color: $primary-color;
    font-size: 1.2rem;
    font-weight: 600;
    color: $white;
  }

  .back-to-top:hover {
    background-color: $secondary-color;
  }

  .hidden {
    display: none;
  }
</style>

<script>
  const showOnPx = 100;
  const backTopButton = document.querySelector(".back-to-top");

  const scrollContainer = () => {
    return document.documentElement || document.body;
  };

  console.log(scrollContainer);

  document.addEventListener("scroll", () => {
    if (scrollContainer().scrollTop > showOnPx) {
      backTopButton.classList.remove("hidden");
    } else {
      backTopButton.classList.add("hidden");
    }
  });

  const goToTop = () => {
    document.body.scrollIntoView({
      behavior: "smooth",
    });
  };

  backTopButton.addEventListener("click", goToTop);
</script>
